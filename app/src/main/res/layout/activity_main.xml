                    android:textColor="#004f98"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewHourlyForecast11AM"
                    app:layout_constraintEnd_toStartOf="@+id/textViewHourlyForecast1PM"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textViewHourlyForecast11AM"
                    app:layout_constraintTop_toTopOf="@+id/textViewHourlyForecast11AM" />

                <TextView
                    android:id="@+id/textViewHourlyForecast1PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="1PM"
                    android:textColor="#004f98"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewHourlyForecast12PM"
                    app:layout_constraintEnd_toStartOf="@+id/textViewHourlyForecast2PM"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textViewHourlyForecast12PM"
                    app:layout_constraintTop_toTopOf="@+id/textViewHourlyForecast12PM" />

                <TextView
                    android:id="@+id/textViewHourlyForecast2PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="2PM"
                    android:textColor="#004f98"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewHourlyForecast1PM"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textViewHourlyForecast1PM"
                    app:layout_constraintTop_toTopOf="@+id/textViewHourlyForecast1PM" />

                <ImageView
                    android:id="@+id/imageViewHourlyForecastNow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintEnd_toEndOf="@+id/textViewHourlyForecastNow"
                    app:layout_constraintStart_toStartOf="@+id/textViewHourlyForecastNow"
                    app:layout_constraintTop_toBottomOf="@+id/textViewHourlyForecastNow"
                    app:srcCompat="@drawable/cloudy_sun" />

                <ImageView
                    android:id="@+id/imageViewHourlyForecast10AM"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintEnd_toEndOf="@+id/textViewHourlyForecast10AM"
                    app:layout_constraintStart_toStartOf="@+id/textViewHourlyForecast10AM"
                    app:layout_constraintTop_toBottomOf="@+id/textViewHourlyForecast10AM"
                    app:srcCompat="@drawable/cloud" />

                <ImageView
                    android:id="@+id/imageViewHourlyForecast11AM"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintEnd_toEndOf="@+id/textViewHourlyForecast11AM"
                    app:layout_constraintStart_toStartOf="@+id/textViewHourlyForecast11AM"
                    app:layout_constraintTop_toBottomOf="@+id/textViewHourlyForecast11AM"
                    app:srcCompat="@drawable/cloud" />

                <ImageView
