                    app:layout_constraintTop_toTopOf="@+id/cardView7" />

                <TextView
                    android:id="@+id/textViewHourlyForecastNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/inter_regular"
                    android:text="Now"
                    android:textColor="#004f98"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toStartOf="@+id/textViewHourlyForecast10AM"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView7" />

                <TextView
                    android:id="@+id/textViewHourlyForecast10AM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="10AM"
                    android:textColor="#004f98"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewHourlyForecastNow"
                    app:layout_constraintEnd_toStartOf="@+id/textViewHourlyForecast11AM"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textViewHourlyForecastNow"
                    app:layout_constraintTop_toTopOf="@+id/textViewHourlyForecastNow" />

                <TextView
                    android:id="@+id/textViewHourlyForecast11AM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="11AM"
                    android:textColor="#004f98"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewHourlyForecast10AM"
                    app:layout_constraintEnd_toStartOf="@+id/textViewHourlyForecast12PM"
                    app:layout_constraintHorizontal_bias="0.5"
